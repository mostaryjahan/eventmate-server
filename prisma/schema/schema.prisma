

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

model Admin {
  id           String       @id @default(uuid())
  name         String
  email        String       @unique
  password     String
  profilePhoto String?
  role         UserRole     @default(ADMIN)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

}